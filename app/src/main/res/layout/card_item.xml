            android:fontFamily="@font/montserrat_bold"
            android:lineHeight="24dp"
            android:text="Ticker"
            android:textAllCaps="true"
            android:textColor="#1A1A1A"
            android:textFontWeight="700"
            android:textSize="18dp"
            android:textStyle="normal"
